{% block stylesheets %}
<style>
    /* Style pour le bouton de suppression */
    .btn-delete {
        display: inline-block;
        font-weight: 500;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        user-select: none;
        border: 1px solid transparent;
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        line-height: 1.5;
        border-radius: 4px;
        transition: all 0.15s ease-in-out;
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
    }
    
    .btn-delete:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }
    
    /* Style pour le conteneur de suppression */
    .delete-container {
        display: inline-block;
        margin-top: 10px;
    }
    
    /* Style pour l'alerte de confirmation */
    .delete-alert {
        color: #721c24;
        background-color: #f8d7da;
        border: 1px solid #f5c6cb;
        border-radius: 4px;
        padding: 10px 15px;
        margin-bottom: 15px;
        font-size: 0.9rem;
    }
</style>
{% endblock %}

<div class="delete-container">
    <form method="post" action="{{ path('app_blencours_delete', {'id': blencour.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ? Cette action est irréversible.');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ blencour.id) }}">
        <button class="btn-delete">
            <i class="fas fa-trash-alt me-2"></i>Supprimer
        </button>
    </form>
</div>