{% extends 'base.html.twig' %}

{% block title %}Reapro{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if results is not empty %}
        {% for result in results %}
            <div>
                <h1>Mission en cours</h1>
                <p><strong>Adresse:</strong> {{ result.adresse }}</p>
                <p><strong>Statut:</strong> {{ result.statut }}</p>
                <p><input type="text" oncopy="return false;" onpaste="return false;" oncut="return false;" name="adresse_dist" id="adresse_dist"/></p>
                <p><a class="btn btn-primary btn-sm mission-link" href="{{ path('edit_validation', {id: result.id}) }}">Prendre la mission</a></p>
            </div>
            <hr>
        {% endfor %}
    {% else %}
        <p>"Aucune palette disponible pour le moment."</p>
    {% endif %}
</div>

{% endblock %}
