{% extends 'inventairecompt/base.html.twig' %}

{% block title %}Accueil - Gestion Inventaire{% endblock %}

{% block breadcrumb_items %}
    <li class="breadcrumb-item active">Tableau de Bord</li>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 3rem 0;
            margin-bottom: 2rem;
            border-radius: 1rem;
        }
        
        .stats-card {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            padding: 1.5rem;
            text-align: center;
            transition: all 0.3s ease;
            border: none;
        }
        
        .stats-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }
        
        .stats-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 2rem;
            color: white;
        }
        
        .quick-actions {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            padding: 2rem;
            margin-bottom: 2rem;
        }
        
        .action-btn {
            display: flex;
            align-items: center;
            padding: 1rem 1.5rem;
            background: #f8f9fa;
            border: 2px solid #e9ecef;
            border-radius: 0.5rem;
            text-decoration: none;
            color: #495057;
            transition: all 0.3s ease;
            margin-bottom: 1rem;
        }
        
        .action-btn:hover {
            background: #e9ecef;
            border-color: #007bff;
            color: #007bff;
            transform: translateX(5px);
        }
        
        .action-btn i {
            font-size: 1.5rem;
            margin-right: 1rem;
            width: 30px;
            text-align: center;
        }
        
        .recent-activity {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        .activity-item {
            padding: 1rem;
            border-bottom: 1px solid #e9ecef;
            transition: background-color 0.3s ease;
        }
        
        .activity-item:hover {
            background-color: #f8f9fa;
        }
        
        .activity-item:last-child {
            border-bottom: none;
        }
        
        .activity-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            color: white;
            margin-right: 1rem;
        }
        
        .search-hero {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            padding: 2rem;
            margin-bottom: 2rem;
        }
        
        .search-input-large {
            height: 60px;
            font-size: 1.2rem;
            border-radius: 0.5rem;
        }
        
        .search-btn-large {
            height: 60px;
            padding: 0 2rem;
            font-size: 1.2rem;
            border-radius: 0.5rem;
        }
        
        .chart-container {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            padding: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .weather-widget {
            background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
            color: white;
            border-radius: 1rem;
            padding: 1.5rem;
            text-align: center;
        }
        
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
        
        .pulse {
            animation: pulse 2s infinite;
        }
        
        @media (max-width: 768px) {
            .hero-section {
                padding: 2rem 0;
            }
            
            .stats-card {
                margin-bottom: 1rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Section Hero -->
    <div class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="display-4 fw-bold mb-3">
                        <i class="fas fa-warehouse me-3"></i>
                        Tableau de Bord Inventaire
                    </h1>
                    <p class="lead mb-4">
                        Gérez vos stocks efficacement avec notre système de comptage avancé
                    </p>
                    <div class="d-flex flex-wrap gap-2">
                        <span class="badge bg-light text-dark fs-6 px-3 py-2">
                            <i class="fas fa-clock me-1"></i>
                            Dernière mise à jour: {{ "now"|date('d/m/Y H:i') }}
                        </span>
                        <span class="badge bg-success fs-6 px-3 py-2">
                            <i class="fas fa-check-circle me-1"></i>
                            Système opérationnel
                        </span>
                    </div>
                </div>
                <div class="col-md-4 text-center">
                    <i class="fas fa-chart-line fa-5x opacity-50"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Recherche rapide -->
    <div class="search-hero">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <h3 class="text-center mb-4">
                    <i class="fas fa-search text-primary me-2"></i>
                    Recherche Rapide
                </h3>
                <form action="{{ path('app_inventairecompt_search') }}" method="GET">
                    <div class="input-group">
                        <input type="text" 
                               class="form-control search-input-large" 
                               name="codeprod" 
                               placeholder="Saisissez un code produit pour commencer..." 
                               autocomplete="off"
                               id="quickSearchInput">
                        <button class="btn btn-primary search-btn-large" type="submit">
                            <i class="fas fa-search me-2"></i>Rechercher
                        </button>
                    </div>
                    <div class="text-center mt-3">
                        <small class="text-muted">
                            <i class="fas fa-keyboard me-1"></i>
                            Raccourci: <kbd>Ctrl</kbd> + <kbd>K</kbd>
                        </small>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Statistiques principales -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="stats-card">
                <div class="stats-icon bg-primary">
                    <i class="fas fa-boxes"></i>
                </div>
                <h3 class="text-primary">{{ total_produits|number_format(0, ',', ' ') }}</h3>
                <p class="text-muted mb-0">Total Produits</p>
                <small class="text-success">
                    <i class="fas fa-arrow-up me-1"></i>+2.5% ce mois
                </small>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="stats-card">
                <div class="stats-icon bg-success">
                    <i class="fas fa-barcode"></i>
                </div>
                <h3 class="text-success">{{ codes_produits_uniques|number_format(0, ',', ' ') }}</h3>
                <p class="text-muted mb-0">Codes Uniques</p>
                <small class="text-info">
                    <i class="fas fa-equals me-1"></i>Stable
                </small>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="stats-card">
                <div class="stats-icon bg-warning">
                    <i class="fas fa-clipboard-check"></i>
                </div>
                <h3 class="text-warning">{{ comptages_recents|number_format(0, ',', ' ') }}</h3>
                <p class="text-muted mb-0">Comptages (7j)</p>
                <small class="text-success">
                    <i class="fas fa-arrow-up me-1"></i>+15.3% vs semaine dernière
                </small>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="stats-card pulse">
                <div class="stats-icon bg-info">
                    <i class="fas fa-users"></i>
                </div>
                <h3 class="text-info">5</h3>
                <p class="text-muted mb-0">Utilisateurs Actifs</p>
                <small class="text-success">
                    <i class="fas fa-circle text-success me-1"></i>En ligne maintenant
                </small>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Actions rapides -->
        <div class="col-md-8">
            <div class="quick-actions">
                <h4 class="mb-4">
                    <i class="fas fa-bolt text-warning me-2"></i>
                    Actions Rapides
                </h4>
                <div class="row">
                    <div class="col-md-6">
                        <a href="{{ path('app_inventairecompt_search') }}" class="action-btn">
                            <i class="fas fa-search text-primary"></i>
                            <div>
                                <strong>Rechercher un Produit</strong>
                                <br><small class="text-muted">Trouvez rapidement vos stocks</small>
                            </div>
                        </a>
                        
                        <a href="{{ path('app_inventairecompt_zones') }}" class="action-btn">
                            <i class="fas fa-map-marked-alt text-success"></i>
                            <div>
                                <strong>Explorer les Zones</strong>
                                <br><small class="text-muted">Navigation par zones de stockage</small>
                            </div>
                        </a>
                        
                        <a href="{{ path('app_inventairecompt_rapport') }}" class="action-btn">
                            <i class="fas fa-chart-bar text-info"></i>
                            <div>
                                <strong>Rapports Globaux</strong>
                                <br><small class="text-muted">Analyses et statistiques</small>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a href="{{ path('app_inventairecompt_sessions') }}" class="action-btn">
                            <i class="fas fa-clipboard-list text-warning"></i>
                            <div>
                                <strong>Sessions de Comptage</strong>
                                <br><small class="text-muted">Gérer vos inventaires</small>
                            </div>
                        </a>
                        
                        <a href="{{ path('app_inventairecompt_statistiques') }}" class="action-btn">
                            <i class="fas fa-chart-pie text-danger"></i>
                            <div>
                                <strong>Statistiques Avancées</strong>
                                <br><small class="text-muted">Tableaux de bord détaillés</small>
                            </div>
                        </a>
                        
                        <a href="#" class="action-btn" onclick="showHelp()">
                            <i class="fas fa-question-circle text-secondary"></i>
                            <div>
                                <strong>Aide & Documentation</strong>
                                <br><small class="text-muted">Guides d'utilisation</small>
                            </div>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Graphique d'activité -->
            <div class="chart-container">
                <h4 class="mb-4">
                    <i class="fas fa-chart-line text-info me-2"></i>
                    Activité des 7 Derniers Jours
                </h4>
                <!--<canvas id="activityChart" width="400" height="150"></canvas> -->
            </div>
        </div>

        <!-- Sidebar droite -->
        <div class="col-md-4">
            <!-- Activité récente -->
            <div class="recent-activity">
                <div class="card-header bg-white border-0 pb-0">
                    <h4 class="mb-3">
                        <i class="fas fa-history text-primary me-2"></i>
                        Activité Récente
                    </h4>
                </div>
                <div class="card-body p-0">
                    <div class="activity-item">
                        <div class="d-flex align-items-center">
                            <div class="activity-icon bg-success">
                                <i class="fas fa-check"></i>
                            </div>
                            <div class="flex-grow-1">
                                <strong>Comptage validé</strong>
                                <br><small class="text-muted">Produit ABC123 - Zone A</small>
                                <br><small class="text-muted">Il y a 5 minutes</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="activity-item">
                        <div class="d-flex align-items-center">
                            <div class="activity-icon bg-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <div class="flex-grow-1">
                                <strong>Écart détecté</strong>
                                <br><small class="text-muted">Produit XYZ789 - Écart de +15</small>
                                <br><small class="text-muted">Il y a 12 minutes</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="activity-item">
                        <div class="d-flex align-items-center">
                            <div class="activity-icon bg-info">
                                <i class="fas fa-search"></i>
                            </div>
                            <div class="flex-grow-1">
                                <strong>Recherche effectuée</strong>
                                <br><small class="text-muted">Code DEF456 - 3 résultats</small>
                                <br><small class="text-muted">Il y a 18 minutes</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="activity-item">
                        <div class="d-flex align-items-center">
                            <div class="activity-icon bg-primary">
                                <i class="fas fa-file-export"></i>
                            </div>
                            <div class="flex-grow-1">
                                <strong>Rapport généré</strong>
                                <br><small class="text-muted">Export CSV - Zone B</small>
                                <br><small class="text-muted">Il y a 25 minutes</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="activity-item">
                        <div class="d-flex align-items-center">
                            <div class="activity-icon bg-secondary">
                                <i class="fas fa-user"></i>
                            </div>
                            <div class="flex-grow-1">
                                <strong>Connexion utilisateur</strong>
                                <br><small class="text-muted">Opérateur: Marie Dupont</small>
                                <br><small class="text-muted">Il y a 1 heure</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-0 text-center">
                    <a href="#" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-history me-1"></i>Voir tout l'historique
                    </a>
                </div>
            </div>

            <!-- Widget météo/info -->
            <div class="weather-widget mt-4">
                <h5><i class="fas fa-info-circle me-2"></i>Informations</h5>
                <div class="row text-center mt-3">
                    <div class="col-6">
                        <h6>Serveur</h6>
                        <span class="badge bg-success">
                            <i class="fas fa-circle me-1"></i>Opérationnel
                        </span>
                    </div>
                    <div class="col-6">
                        <h6>Base de données</h6>
                        <span class="badge bg-success">
                            <i class="fas fa-database me-1"></i>Connectée
                        </span>
                    </div>
                </div>
                <hr class="bg-white">
                <div class="text-center">
                    <small>
                        <i class="fas fa-clock me-1"></i>
                        Dernière sauvegarde: {{ "now"|date('H:i') }}
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Suggestions d'amélioration -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="alert alert-light border" role="alert">
                <h5 class="alert-heading">
                    <i class="fas fa-lightbulb text-warning me-2"></i>
                    Suggestions d'Optimisation
                </h5>
                <div class="row">
                    <div class="col-md-4">
                        <p class="mb-2"><i class="fas fa-arrow-right text-primary me-2"></i>
                        Planifiez vos comptages pour optimiser les résultats</p>
                    </div>
                    <div class="col-md-4">
                        <p class="mb-2"><i class="fas fa-arrow-right text-success me-2"></i>
                        Utilisez les filtres de recherche pour gagner du temps</p>
                    </div>
                    <div class="col-md-4">
                        <p class="mb-2"><i class="fas fa-arrow-right text-info me-2"></i>
                        Exportez régulièrement vos données pour archivage</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-focus sur la recherche rapide
    const quickSearchInput = document.getElementById('quickSearchInput');
    if (quickSearchInput) {
        quickSearchInput.focus();
    }

    // Graphique d'activité
    const ctx = document.getElementById('activityChart');
    if (ctx) {
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi', 'Samedi', 'Dimanche'],
                datasets: [{
                    label: 'Comptages effectués',
                    data: [12, 19, 15, 25, 22, 8, 5],
                    borderColor: '#007bff',
                    backgroundColor: 'rgba(0, 123, 255, 0.1)',
                    tension: 0.4,
                    fill: true
                }, {
                    label: 'Écarts détectés',
                    data: [2, 3, 1, 4, 2, 1, 0],
                    borderColor: '#dc3545',
                    backgroundColor: 'rgba(220, 53, 69, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    }

    // Animation des cartes de statistiques
    const statsCards = document.querySelectorAll('.stats-card');
    statsCards.forEach((card, index) => {
        setTimeout(() => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            card.style.transition = 'all 0.5s ease';
            
            setTimeout(() => {
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 100);
        }, index * 100);
    });

    // Mise à jour de l'heure en temps réel
    function updateTime() {
        const now = new Date();
        const timeElements = document.querySelectorAll('[data-live-time]');
        timeElements.forEach(el => {
            el.textContent = now.toLocaleTimeString('fr-FR');
        });
    }
    
    setInterval(updateTime, 1000);

    // Raccourcis clavier spéciaux pour la page d'accueil
    document.addEventListener('keydown', function(e) {
        // Alt + 1-6 pour navigation rapide
        if (e.altKey && e.key >= '1' && e.key <= '6') {
            e.preventDefault();
            const actions = [
                '{{ path('app_inventairecompt_search') }}',
                '{{ path('app_inventairecompt_zones') }}',
                '{{ path('app_inventairecompt_rapport') }}',
                '{{ path('app_inventairecompt_sessions') }}',
                '{{ path('app_inventairecompt_statistiques') }}',
                '#help'
            ];
            const index = parseInt(e.key) - 1;
            if (actions[index] && actions[index] !== '#help') {
                window.location.href = actions[index];
            } else if (actions[index] === '#help') {
                showHelp();
            }
        }
    });
});

// Fonction d'aide
function showHelp() {
    const helpContent = `
        <div class="modal fade" id="helpModal" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="fas fa-question-circle me-2"></i>Aide Rapide
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6><i class="fas fa-keyboard me-2"></i>Raccourcis Clavier</h6>
                                <ul class="list-unstyled">
                                    <li><kbd>Ctrl</kbd> + <kbd>K</kbd> : Recherche rapide</li>
                                    <li><kbd>Alt</kbd> + <kbd>1</kbd> : Recherche produit</li>
                                    <li><kbd>Alt</kbd> + <kbd>2</kbd> : Zones</li>
                                    <li><kbd>Alt</kbd> + <kbd>3</kbd> : Rapports</li>
                                    <li><kbd>Alt</kbd> + <kbd>4</kbd> : Sessions</li>
                                    <li><kbd>Alt</kbd> + <kbd>5</kbd> : Statistiques</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h6><i class="fas fa-info-circle me-2"></i>Navigation</h6>
                                <ul class="list-unstyled">
                                    <li>• Utilisez la sidebar pour naviguer</li>
                                    <li>• Les notifications s'affichent en haut à droite</li>
                                    <li>• Les statistiques se mettent à jour automatiquement</li>
                                    <li>• Les actions rapides sont disponibles sur cette page</li>
                                </ul>
                            </div>
                        </div>
                        <hr>
                        <h6><i class="fas fa-clipboard-list me-2"></i>Flux de Travail Recommandé</h6>
                        <ol>
                            <li>Recherchez un produit par son code</li>
                            <li>Accédez au mode comptage</li>
                            <li>Saisissez les quantités réelles</li>
                            <li>Validez et commentez les écarts</li>
                            <li>Générez le rapport d'écarts</li>
                            <li>Exportez les données si nécessaire</li>
                        </ol>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                        <button type="button" class="btn btn-primary" onclick="window.open('#', '_blank')">
                            <i class="fas fa-book me-1"></i>Documentation Complète
                        </button>
                    </div>
                </div>
            </div>
        </div>
    `;
    
    document.body.insertAdjacentHTML('beforeend', helpContent);
    const helpModal = new bootstrap.Modal(document.getElementById('helpModal'));
    helpModal.show();
    
    // Nettoyer le modal après fermeture
    document.getElementById('helpModal').addEventListener('hidden.bs.modal', function() {
        this.remove();
    });
}

// Notification de bienvenue
setTimeout(() => {
    showNotification('Bienvenue dans le système de gestion d\'inventaire ! Utilisez Ctrl+K pour une recherche rapide.', 'info');
}, 1000);
</script>
{% endblock %}