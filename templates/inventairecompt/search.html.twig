{% extends 'inventairecompt/base.html.twig' %}

{% block title %}Recherche - Inventaire{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .search-container {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
        }
        .table-container {
            max-height: 600px;
            overflow-y: auto;
        }
        .quantity-badge {
            min-width: 50px;
        }
        .loading-spinner {
            display: none;
        }
        .search-suggestions {
            position: absolute;
            z-index: 1000;
            width: 100%;
            max-height: 200px;
            overflow-y: auto;
            background: white;
            border: 1px solid #ddd;
            border-top: none;
            display: none;
        }
        .suggestion-item {
            padding: 0.5rem 1rem;
            cursor: pointer;
            border-bottom: 1px solid #eee;
        }
        .suggestion-item:hover {
            background-color: #f8f9fa;
        }
        .counting-mode-btn {
            background: linear-gradient(45deg, #ff9800, #ff5722);
            border: none;
            color: white;
            font-weight: bold;
            box-shadow: 0 2px 10px rgba(255, 152, 0, 0.3);
            transition: all 0.3s ease;
        }
        .counting-mode-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(255, 152, 0, 0.4);
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
<!-- En-tête de recherche -->
<div class="search-container">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h2><i class="fas fa-search me-2"></i>Recherche Produit</h2>
                <p class="lead">Trouvez rapidement vos produits par code</p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Formulaire de recherche -->
    <div class="row mb-4">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-body">
                    <form method="GET" id="searchForm">
                        <div class="position-relative">
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">
                                    <i class="fas fa-barcode"></i>
                                </span>
                                <input type="text" 
                                       class="form-control" 
                                       name="codeprod" 
                                       id="codeprodInput"
                                       value="{{ codeprod }}" 
                                       placeholder="Entrez le code produit (ex: ABC123)..." 
                                       required
                                       autocomplete="off"
                                       pattern="[A-Za-z0-9-_]+"
                                       title="Utilisez uniquement des lettres, chiffres, tirets et underscores">
                                <button class="btn btn-primary btn-lg" type="submit" id="searchBtn">
                                    <span class="loading-spinner">
                                        <i class="fas fa-spinner fa-spin me-1"></i>
                                    </span>
                                    <span class="search-text">
                                        <i class="fas fa-search me-1"></i>Rechercher
                                    </span>
                                </button>
                            </div>
                            <!-- Suggestions dropdown -->
                            <div class="search-suggestions" id="suggestions"></div>
                        </div>
                        
                        <!-- Options de recherche avancée -->
                        <div class="mt-3">
                            <button type="button" class="btn btn-link btn-sm" data-bs-toggle="collapse" data-bs-target="#advancedSearch">
                                <i class="fas fa-cog me-1"></i>Options avancées
                            </button>
                        </div>
                        
                        <div class="collapse mt-2" id="advancedSearch">
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="form-label">Zone (optionnel)</label>
                                    <select class="form-select" name="zone">
                                        <option value="">Toutes les zones</option>
                                        <!-- Options zones dynamiques à ajouter -->
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Stock minimum</label>
                                    <input type="number" class="form-control" name="stock_min" min="0" placeholder="0" value="{{ stock_min }}">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {% if codeprod %}
    <!-- Résultats de recherche -->
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-info d-flex align-items-center" role="alert">
                <i class="fas fa-info-circle me-3 fa-lg"></i>
                <div>
                    <h5 class="mb-1">Résultats pour: <strong>{{ codeprod|upper }}</strong></h5>
                    <p class="mb-0">
                        <span class="badge bg-primary me-2">{{ count }} emplacement(s)</span>
                        <span class="badge bg-success">Total: {{ total_uvtotal }} UV</span>
                        {% if count > 0 %}
                            <span class="badge bg-info">Moyenne: {{ (total_uvtotal / count)|number_format(1) }} UV/emplacement</span>
                        {% endif %}
                    </p>
                </div>
            </div>
        </div>
    </div>

    {% if results %}
    <!-- Tableau des résultats -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-table me-2"></i>Détails par Emplacement</h5>
                    <div>
                        <!-- BOUTON MODE COMPTAGE - NOUVEAU -->
                        <a href="{{ path('app_inventairecompt_comptage', {codeprod: codeprod}) }}" 
                           class="btn counting-mode-btn me-2">
                            <i class="fas fa-clipboard-check me-1"></i>Mode Comptage
                        </a>
                        
                        <button class="btn btn-sm btn-outline-primary me-2" onclick="exportToCSV()">
                            <i class="fas fa-download me-1"></i>Exporter CSV
                        </button>
                        <button class="btn btn-sm btn-outline-primary" onclick="printResults()">
                            <i class="fas fa-print me-1"></i>Imprimer
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-container">
                        <table class="table table-striped table-hover mb-0" id="resultsTable">
                            <thead class="table-dark sticky-top">
                                <tr>
                                    <th style="width: 15%" data-sort="emplacement">
                                        Emplacement
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    </th>
                                    <th style="width: 25%">Désignation</th>
                                    <th style="width: 12%">No Palette</th>
                                    <th style="width: 10%" data-sort="zone">
                                        Zone
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    </th>
                                    <th style="width: 12%" class="text-center" data-sort="uvtotal">
                                        UV Total
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    </th>
                                    <th style="width: 8%" class="text-center">UR Dispo</th>
                                    <th style="width: 8%" class="text-center">UC Dispo</th>
                                    <th style="width: 10%" class="text-center" data-sort="date">
                                        Date Entrée
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in results %}
                                <tr class="{% if item.total_uvtotal == 0 %}table-warning{% endif %}">
                                    <td>
                                        <span class="badge bg-primary fs-6">{{ item.emplacement }}</span>
                                        {% if item.nb_lignes > 1 %}
                                            <small class="text-muted d-block">
                                                <i class="fas fa-layer-group me-1"></i>{{ item.nb_lignes }} entrées
                                            </small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <strong>{{ item.dsignprod|slice(0, 50) }}{% if item.dsignprod|length > 50 %}...{% endif %}</strong>
                                        <br><small class="text-muted">{{ item.codeprod }}</small>
                                    </td>
                                    <td>
                                        {% if item.nopal %}
                                            <span class="badge bg-secondary">{{ item.nopal }}</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if item.zone %}
                                            <span class="badge bg-secondary">{{ item.zone }}</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        {% set uvtotal = item.total_uvtotal ?? 0 %}
                                        <span class="badge quantity-badge {% if uvtotal > 0 %}bg-success{% else %}bg-danger{% endif %} fs-5 px-3 py-2">
                                            <i class="fas fa-boxes me-1"></i>{{ uvtotal }}
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge quantity-badge bg-warning text-dark">{{ item.total_urdispo ?? 0 }}</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge quantity-badge bg-info">{{ item.total_ucdispo ?? 0 }}</span>
                                    </td>
                                    <td class="text-center">
                                        {% if item.dateentree %}
                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>{{ item.dateentree|date('d/m/Y') }}
                                            </small>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot class="table-dark">
                                <tr>
                                    <th colspan="4" class="text-end fs-5">
                                        <i class="fas fa-calculator me-2"></i>TOTAL GÉNÉRAL:
                                    </th>
                                    <th class="text-center">
                                        <span class="badge bg-success fs-4 px-3 py-2">
                                            <i class="fas fa-boxes me-1"></i>{{ total_uvtotal }}
                                        </span>
                                    </th>
                                    <th colspan="3" class="text-center">
                                        <span class="text-light">{{ count }} emplacement(s)</span>
                                    </th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cartes de résumé -->
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card border-primary h-100">
                <div class="card-body text-center">
                    <div class="mb-2">
                        <i class="fas fa-map-marker-alt fa-3x text-primary"></i>
                    </div>
                    <h3 class="text-primary">{{ count }}</h3>
                    <p class="card-text">Emplacements</p>
                    <small class="text-muted">Répartition des stocks</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success h-100">
                <div class="card-body text-center">
                    <div class="mb-2">
                        <i class="fas fa-boxes fa-3x text-success"></i>
                    </div>
                    <h3 class="text-success">{{ total_uvtotal }}</h3>
                    <p class="card-text">Total UV</p>
                    <small class="text-muted">Unités de Vente</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info h-100">
                <div class="card-body text-center">
                    <div class="mb-2">
                        <i class="fas fa-chart-line fa-3x text-info"></i>
                    </div>
                    <h3 class="text-info">
                        {% if count > 0 %}
                            {{ (total_uvtotal / count)|number_format(1) }}
                        {% else %}
                            0
                        {% endif %}
                    </h3>
                    <p class="card-text">Moyenne UV</p>
                    <small class="text-muted">Par emplacement</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning h-100">
                <div class="card-body text-center">
                    <div class="mb-2">
                        <i class="fas fa-percentage fa-3x text-warning"></i>
                    </div>
                    <h3 class="text-warning">
                        {% set total_disponible = 0 %}
                        {% for item in results %}
                            {% set total_disponible = total_disponible + (item.total_urdispo ?? 0) + (item.total_ucdispo ?? 0) %}
                        {% endfor %}
                        {% if total_uvtotal > 0 %}
                            {{ ((total_disponible / total_uvtotal) * 100)|number_format(1) }}%
                        {% else %}
                            0%
                        {% endif %}
                    </h3>
                    <p class="card-text">Disponibilité</p>
                    <small class="text-muted">Stock disponible</small>
                </div>
            </div>
        </div>
    </div>

    {% else %}
    <!-- Aucun résultat -->
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <i class="fas fa-search fa-4x text-warning mb-3"></i>
                    <h4 class="text-warning">Aucun produit trouvé</h4>
                    <p class="text-muted">
                        Aucun produit trouvé avec le code: <strong>{{ codeprod|upper }}</strong>
                    </p>
                    <div class="mt-3">
                        <button class="btn btn-outline-primary" onclick="clearSearch()">
                            <i class="fas fa-redo me-1"></i>Nouvelle recherche
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('codeprodInput');
    const searchForm = document.getElementById('searchForm');
    const searchBtn = document.getElementById('searchBtn');
    
    // Auto-focus
    if (searchInput && !searchInput.value) {
        searchInput.focus();
    }

    // Loading state
    searchForm.addEventListener('submit', function() {
        searchBtn.querySelector('.loading-spinner').style.display = 'inline';
        searchBtn.querySelector('.search-text').style.display = 'none';
        searchBtn.disabled = true;
    });

    // Validation côté client
    searchInput.addEventListener('input', function() {
        const value = this.value.trim();
        if (value.length > 0 && !/^[A-Za-z0-9\-_]+$/.test(value)) {
            this.setCustomValidity('Utilisez uniquement des lettres, chiffres, tirets et underscores');
        } else {
            this.setCustomValidity('');
        }
    });

    // Suggestions de recherche
    let debounceTimer;
    searchInput.addEventListener('input', function() {
        const query = this.value.trim();
        if (query.length >= 2) {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(() => {
                fetchSuggestions(query);
            }, 300);
        } else {
            document.getElementById('suggestions').style.display = 'none';
        }
    });

    // Tri des colonnes
    document.querySelectorAll('[data-sort]').forEach(header => {
        header.style.cursor = 'pointer';
        header.addEventListener('click', function() {
            const column = this.dataset.sort;
            sortTable(column);
        });
    });
});

// Suggestions de recherche
async function fetchSuggestions(query) {
    try {
        const response = await fetch(`{{ path('app_inventairecompt_suggestions', {query: '__QUERY__'}) }}`.replace('__QUERY__', encodeURIComponent(query)));
        const suggestions = await response.json();
        
        const suggestionsEl = document.getElementById('suggestions');
        suggestionsEl.innerHTML = '';
        
        if (suggestions.length > 0) {
            suggestions.forEach(item => {
                const div = document.createElement('div');
                div.className = 'suggestion-item';
                div.innerHTML = `<strong>${item.codeprod}</strong><br><small>${item.dsignprod}</small>`;
                div.addEventListener('click', () => {
                    document.getElementById('codeprodInput').value = item.codeprod;
                    suggestionsEl.style.display = 'none';
                    document.getElementById('searchForm').submit();
                });
                suggestionsEl.appendChild(div);
            });
            suggestionsEl.style.display = 'block';
        } else {
            suggestionsEl.style.display = 'none';
        }
    } catch (error) {
        console.error('Erreur lors de la récupération des suggestions:', error);
    }
}

// Fonctions utilitaires
function clearSearch() {
    document.getElementById('codeprodInput').value = '';
    document.getElementById('codeprodInput').focus();
}

function exportToCSV() {
    const table = document.getElementById('resultsTable');
    const csv = tableToCSV(table);
    downloadCSV(csv, `inventaire_${new Date().toISOString().slice(0,10)}.csv`);
}

function printResults() {
    window.print();
}

function tableToCSV(table) {
    const rows = table.querySelectorAll('tr');
    const csv = [];
    
    rows.forEach(row => {
        const cells = row.querySelectorAll('th, td');
        const rowData = Array.from(cells).map(cell => {
            return '"' + cell.textContent.trim().replace(/"/g, '""') + '"';
        });
        csv.push(rowData.join(','));
    });
    
    return csv.join('\n');
}

function downloadCSV(csv, filename) {
    const blob = new Blob([csv], { type: 'text/csv' });
    const url = window.URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.setAttribute('hidden', '');
    a.setAttribute('href', url);
    a.setAttribute('download', filename);
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
}

function sortTable(column) {
    console.log('Tri par:', column);
    // Implémentation du tri à ajouter selon les besoins
}

// Masquer les suggestions quand on clique ailleurs
document.addEventListener('click', function(e) {
    if (!e.target.closest('.position-relative')) {
        document.getElementById('suggestions').style.display = 'none';
    }
});
</script>
{% endblock %}