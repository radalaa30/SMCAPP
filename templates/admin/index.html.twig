{# templates/admin/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Administration - Réapprovisionnement{% endblock %}

{% block stylesheets %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Tableau de bord Administration</h1>

        <div class="row mt-4">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Demandes de Réapprovisionnement</h5>
                        <p class="card-text">Gérer les demandes de réapprovisionnement des pickings</p>
                        <a href="{{ path('admin_demandes_reappro') }}" class="btn btn-primary">
                            <i class="fas fa-boxes"></i> Voir les demandes
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

